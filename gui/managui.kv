#:import ScrollEffect kivy.effects.scroll.ScrollEffect

<MessagesLog>:
    canvas.before:
        Color:
            rgba: .1, .1, .1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    msg_log_label: id_msg_log_label
    ScrollView:
        Label:
            id: id_msg_log_label
            size_hint_y: None
            pos: root.pos
            text: 'Welcome to ManaChat. Press F1 to show settings.'
            text_size: (root.width, None)
            size: self.texture_size
            font_size: '12sp'


<PlayersListItem>:

    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.05, 1
        Line:
            points:  [ self.x, self.y, self.x+self.width, self.y ]

    Label:
        text: root.nick


<PlayersList>:

    canvas.before:
        Color:
            rgba: .25, .1, .9, 1
        Rectangle:
            pos: self.pos
            size: self.size


