#:import ScrollEffect kivy.effects.scroll.ScrollEffect

<MessagesLog>:
    canvas.before:
        Color:
            rgba: .1, .1, .1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    msg_log_label: id_msg_log_label
    ScrollView:
        Label:
            id: id_msg_log_label
            size_hint_y: None
            pos: root.pos
            text: 'Welcome to ManaChat. Press F1 to show settings.'
            text_size: (root.width, None)
            size: self.texture_size
            font_size: '12sp'


<PlayersListItem>:

    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.05, 1
        Line:
            points:  [ self.x, self.y, self.x+self.width, self.y ]

    Label:
        text: root.nick


<PlayersList>:

    canvas.before:
        Color:
            rgba: .25, .1, .9, 1
        Rectangle:
            pos: self.pos
            size: self.size


<BeingWidget>:

    canvas.before:
        Color:
            rgba: 0.1, 0.5, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.name
        pos: root.pos


<RootWidget>:

    canvas.before:
        Color:
            rgba: 0.01, 0.33, 0.32, 1
        Rectangle:
            pos: self.pos
            size: self.size

    messages_log: id_messages_log
    chat_input: id_chat_input
    players_list: id_players_list
    map_w: id_map_image
    player: id_player
    map_scroller: id_map_scroller

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 1

        BoxLayout:
            orientation: 'vertical'

            ScrollView:
                effect_cls: ScrollEffect
                scroll_x: 0
                scroll_y: 0.5
                size_hint: 1, 0.8
                id: id_map_scroller

                FloatLayout:
                    size_hint: None, None
                    size: id_map_image.size

                    MapWidget:
                        id: id_map_image
                        player: id_player
                        size_hint: None, None
                        on_touch_down: app.move_player(*args)

                    BeingWidget:
                        id: id_player
                        name: "Player"
                        size_hint: None, None
                        size: 16, 32

            MessagesLog:
                id: id_messages_log
                size_hint: 1, 0.2

            TextInput:
                id: id_chat_input
                size_hint: 1, None
                height: '50dp'
                focus: True
                multiline: False
                on_text_validate: root.on_command_enter(args)

        PlayersList:
            id: id_players_list
            size_hint: None, 1
            width: '150dp'


<RootWidgetMobile>:

    canvas.before:
        Color:
            rgba: 0.01, 0.33, 0.32, 1
        Rectangle:
            pos: self.pos
            size: self.size

    messages_log: id_messages_log
    chat_input: id_chat_input
    players_list: id_players_list

    Carousel:

        BoxLayout:
            orientation: 'vertical'

            MessagesLog:
                id: id_messages_log

            TextInput:
                id: id_chat_input
                size_hint_y: None
                height: '50dp'
                focus: True
                multiline: False
                on_text_validate: root.on_command_enter(args)

        PlayersList:
            id: id_players_list
